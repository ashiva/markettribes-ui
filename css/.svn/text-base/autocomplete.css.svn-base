/* TextboxList sample CSS */
ul.holder { background: url(/img/backgrounds/bg-text-field.png) repeat-x; height: 22px; width: 200px; font-size: 13px; border: none; border-right: 1px solid #a1a4a8; margin: 0; padding: 5px 7px 0 7px; }

.textarea-container ul.holder { background: url(/img/backgrounds/bg-textarea.png) repeat-x; height: 60px; width: 378px; font-size: 13px; border: 1px solid #a1a4a8; margin: 0; padding: 5px 7px 0 7px; }

.textarea-container2 ul.holder { background: url(/img/backgrounds/bg-textarea.png) repeat-x; height: 40px; width: 408px; font-size: 13px; border: 1px solid #a1a4a8; margin: 0; padding: 5px 7px 0 7px; }

.group-association ul.holder {width: 328px;}

*:first-child+html ul.holder { padding-bottom: 2px; } * html ul.holder { padding-bottom: 2px; } /* ie7 and below */
ul.holder li { float: left; list-style-type: none; margin: 0 5px 4px 0; white-space:nowrap;}
ul.holder li.bit-box { -moz-border-radius: 8px; -webkit-border-radius: 8px; border-radius: 8px; background: #0a96d2; color: #fff; font-size: 11px; height: 16px; line-height: 16px; padding: 0 25px 0 10px;}
ul.holder li.bit-box-focus { border-color: #598BEC; background: #598BEC; color: #fff; }
ul.holder li.bit-input input { width: auto; overflow:visible; margin: 0; border: 0px; outline: 0; padding: 0; font-size: 13px; } /* no left/right padding here please */
ul.holder li.bit-input input.smallinput { width: 20px; }

#add { border: 1px solid #999; width: 378px; margin: 50px; padding: 20px 30px 10px; }
form ol li.input-text { margin-bottom: 10px; list-style-type: none; padding-bottom: 10px; }
form ol li.input-text label { font-weight: bold; cursor: pointer; display: block; font-size: 13px; margin-bottom: 10px; }
form ol li.input-text input { width: 500px; padding: 5px 5px 6px; border: 1px solid #999; }
form ul.holder { width: 378px; }
form ul { margin: 0 !important }
ul.holder li.bit-box, #apple-list ul.holder li.bit-box { padding-right: 15px; position: relative; z-index:1000;}
#apple-list ul.holder li.bit-input { margin: 0; }
#apple-list ul.holder li.bit-input input.smallinput { width: 5px; }
ul.holder li.bit-hover { background: #BBCEF1; border: 1px solid #6D95E0; }
ul.holder li.bit-box-focus { border-color: #598BEC; background: #598BEC; color: #fff; }
ul.holder li.bit-box a.closebutton { position: absolute; right: 4px; top: 5px; display: block; width: 7px; height: 7px; font-size: 1px; background: url(/img/close.gif);}
ul.holder li.bit-box a.closebutton:hover { background-position: 7px; }
ul.holder li.bit-box-focus a.closebutton, ul.holder li.bit-box-focus a.closebutton:hover { background-position: bottom; }

/* Autocompleter */

.ui-dialog .gray-box div.facebook-auto {margin: 0;}

.ui-dialog .gray-box div.facebook-auto .default {margin: 0;}

.facebook-auto { display: none; position: absolute; width: 391px; }
.facebook-auto .default { padding: 5px 7px; background: #fff; border-bottom: 1px solid #a2aeb3; border-left: 1px solid #a2aeb3; border-right: 1px solid #a2aeb3; width: 377px;}
.facebook-auto ul { display: none; margin: 0; padding: 0; overflow: auto; position:absolute; z-index:9999; border-bottom: 1px solid #a2aeb3; border-left: 1px solid #a2aeb3; border-right: 1px solid #a2aeb3;}
.facebook-auto ul li { padding: 5px 12px; z-index: 1000; cursor: pointer; margin: 0; list-style-type: none; background-color: #fff;  color: #0a96d2; }
.facebook-auto ul li em { font-weight: bold; font-style: normal; background: #fff; }
.facebook-auto ul li.auto-focus { background: #e0f3fb;}
.facebook-auto ul li.auto-focus em { background: none; }
.deleted { background-color:#4173CC !important; color:#ffffff !important;}
.hidden { display:none;}

.ie6fix {height:1px;width:1px; position:absolute;top:0px;left:0px;z-index:1;}